<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.serviceCategoryMapper">

    <resultMap id="serviceCategoryMap" type="com.ryu.ultramania.model.ServiceCategoryEntity">
        <result property="id" column="id"/>
        <result property="categoryCode" column="category_code"/>
        <result property="categoryName" column="category_name"/>
        <result property="categoryLabel" column="category_label"/>
        <result property="categoryParentCode" column="category_parent_code"/>
        <result property="categoryLevel" column="category_level"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findByCategoryCode" parameterType="map" resultMap="serviceCategoryMap">
        <![CDATA[
      SELECT
            id,
            category_code,
            category_name,
            category_label,
            category_parent_code,
            category_level,
            created_at
      FROM service_category
      WHERE category_code =#{categoryCode}
      ]]>
    </select>

</mapper>